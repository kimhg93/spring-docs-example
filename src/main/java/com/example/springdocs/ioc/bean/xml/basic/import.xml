<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="importBean" class="com.example.springdocs.ioc.bean.xml.basic.ImportBean">
        <!-- property > setter 메서드를 이용해 값을 전달 -->
        <property name="message" value="import test bean message!"/>
        <!-- 생성자를 호출 -->
        <constructor-arg value="import test bean text!"/>
    </bean>

</beans>